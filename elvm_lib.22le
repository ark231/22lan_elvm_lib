    push8s1

    \pushl8 8
    #xchg 0,1
    pop8s0
    #xchg 0,1


    pop8s0
    lshift
    #xchg 0,2

    pop8s0

    ;restore r1_8 from s1
    pop8s1
    @{elvm_pop24s0}
endfunc

