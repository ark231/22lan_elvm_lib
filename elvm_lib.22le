;\autofunc
;\@elvm_open_register s0_8, s0_24n -> s1_24n
startfunc
    #clr0
    pop8s0

    #xchg 0,2
    push8s2
    #xchg 0,2

    \autolabel loop_start
    #xchg 0,2
    pop8s2
    #xchg 1,2
    #ifz loop_end
        #xchg 1,2
        push8s2

        pop8s0
        #xchg 0,1
        push8s1

        pop8s0
        #xchg 0,1
        push8s1

        pop8s0
        #xchg 0,1
        push8s1
    #goto loop_start
    \autolabel loop_end
    @{elvm_open_register}
endfunc

